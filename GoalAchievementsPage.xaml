<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppMAUI.GoalAchievementsPage"
             Title="Постижения">

    <Grid RowDefinitions="Auto, *, Auto" Padding="15" RowSpacing="10">

        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Text="{Binding Description}" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="Общ прогрес:" TextColor="Gray" HorizontalOptions="Center"/>
            <ProgressBar x:Name="GoalProgressBar" ProgressColor="#77B948" ScaleY="3"/>
            <Label x:Name="ProgressLabel" HorizontalOptions="Center" TextColor="#77B948" FontAttributes="Bold"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" x:Name="AchievementsList" ItemsSource="{Binding Achievements}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10" BorderColor="LightGray" CornerRadius="5">
                        <Grid ColumnDefinitions="*, Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" TextColor="Black"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text="{Binding Points, StringFormat='+{0}'}" 
                                   TextColor="#77B948" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="Все още няма записани постижения." 
                       HorizontalOptions="Center" VerticalOptions="Center" TextColor="Gray"/>
            </CollectionView.EmptyView>
        </CollectionView>

        <Button Grid.Row="2" 
                Text="Добави прогрес" 
                BackgroundColor="#77B948" 
                Clicked="OnAddAchievementClicked"
                Margin="0,10,0,0"/>
    </Grid>
</ContentPage>