<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppMAUI.GoalTypeDetailsPage"
             Title="Детайли за цели">

    <Grid RowDefinitions="Auto, *" Padding="15" RowSpacing="10">

        <Label x:Name="PageTitle" 
               FontSize="22" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               TextColor="#77B948"
               FontFamily="Pixel"/>

        <CollectionView Grid.Row="1" x:Name="GoalsList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="15" BorderColor="White" CornerRadius="10">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" 
                                   Text="{Binding Description}" 
                                   FontSize="16" 
                                   VerticalOptions="Center"
                                   TextColor="Black"/>

                            <Label Grid.Column="1" 
                                   Text="{Binding DetailInfo}" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   TextColor="#77B948"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <Label Text="Няма постигнати цели от този тип." 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="Gray"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>