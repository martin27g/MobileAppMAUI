<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppMAUI.GoalTypeDetailsPage">

    <Grid RowDefinitions="Auto, *" Margin="10,25,10,0" Padding="15" RowSpacing="15">

        <VerticalStackLayout Margin="30,0,30,0">
            <Label x:Name="PageTitle" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#77B948"
                   FontFamily="Pixel"/>
            <BoxView HeightRequest="3" Color="LightGray"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" x:Name="GoalsList">

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="15" BackgroundColor="White" StrokeShape="RoundRectangle 6">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" 
                                   Text="{Binding Description}" 
                                   FontSize="18" 
                                   VerticalOptions="Center"
                                   TextColor="Black"/>

                            <Label Grid.Column="1" 
                                   Text="{Binding DetailInfo}" 
                                   FontSize="14" 
                                   FontAttributes="Bold" 
                                   VerticalOptions="Center" 
                                   TextColor="#77B948"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <Label Text="Няма постигнати цели от този тип."
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="Gray"/>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>